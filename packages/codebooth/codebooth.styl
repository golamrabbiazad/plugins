//   color: #000;

.lqv-codebooth > .cm-editor
  grid-area editor


/* file tabs */
.lqv-file-tabs {
  grid-area: files;
  background: #333;
  z-index: 10000;
}

.lqv-file-tabs > [role="tab"] {
  background: #444;
  border: none;
  color: #999;
  cursor: pointer;
  display: inline-block;
  font-family: sans-serif;
  font-size: 1rem;
  height: 100%;
  margin-right: 1px;
  padding: .4em 1em .4em 2em;
  position: relative;
  text-align: left;
}

.lqv-file-tabs > [role="tab"][aria-selected="true"] {
  background: #222;
  color: #FFF;
}

[class*="lqv-filetype-"]::before {
  font-family: monospace;
  font-weight: bold;;
  left: .5em;
  width: 1em;
  text-align: center;
  position: absolute;
}

.lqv-filetype-html::before {
  content: "<>";
  color: #F66;
}

.lqv-filetype-js::before {
  content: "JS";
  color: yellow;
}

.lqv-filetype-css::before {
  content: "#";
  color: #1a69b5;
}

// tabs
.lqv-tabpanel[role="tabpanel"]
  grid-area editor

  > .cm-editor
    height 100%
    width 100%

.cm-scroller {
  min-height: calc(100% - var(--button-height));
  overflow: auto;
}

/* preview */
.lqv-preview
  border-left 1px solid red
  grid-area console
  height 100%

/* console */
.lqv-console
  grid-area console
  overflow-y auto
  white-space pre-wrap
  overflow-wrap anywhere

  // .light &
  //   background #FFF
  
  // .dark &
  background #232327

.lqv-console > pre
  display block
  padding .1em .2em
  width 100%

  // .light &
  //   border-bottom 1px solid #f2f2f4
  //   color #000

  // .dark &
  border-bottom 1px solid #38383d
  color #0F0

// .light .lqv-console > pre
//   border-bottom 1px solid #f2f2f4

/* buttons */
.lqv-cb-buttons {
  display: flex;
  grid-area: buttons;
}

.lqv-cb-buttons > [role="tablist"]
  display: contents

.lqv-codebooth button {
  border: 0 none transparent;
  border-radius: 0;
  color: #fff;
  cursor: pointer;
  flex: 1;
  font-family: "Alegreya", serif;
  font-size: 1.5rem;
  height: var(--button-height);
}

.lqv-cb-reset {
  background-color: #1a69b5;
}

.lqv-cb-reset:active {
  background-color: #16599a;
  outline: none;
}

.lqv-cb-run {
  background-color: #18a85e;
}

.lqv-cb-run:active {
  background-color: #148f50;
  outline: 0 none transparent !important;
}

.lqv-cb-clear {
  background-color: #A52117;
}

.lqv-cb-clear:active {
  background-color: #8c1c14;
  outline: 0 none transparent !important;
}

/* resizing */
.ui-resizable {
  position: relative;
}

.ui-resizable-handle {
  position: absolute;
  font-size: 0.1px;
  -ms-touch-action: none;
  touch-action: none;
  z-index: 200;
}

.ui-resizable-disabled .ui-resizable-handle,
.ui-resizable-autohide .ui-resizable-handle {
  display: none;
}

.ui-resizable-ew {
  cursor: ew-resize;
  width: 7px;
  left: var(--split);
  top: 0;
  height: 100%;
}

.dragging>iframe {
  pointer-events: none;
}

$ns="lqv-cb"

// replay
.lqv-cb-buttons [role="tab"][aria-selected="true"],
.lqv-cb-explain-replay > th,
.lqv-cb-explain-playground > th
  background-color $wine
  
// playground
.lqv-cb-buttons [role="tab"][aria-selected="false"]
  background-color #444
  color #666
  
  &:active
    background-color #9E165C
    color #CCC

// copy
.{$ns}-copy, .lqv-cb-explain-copy > th
  background-color $blue
  
.{$ns}-copy:active
  background-color #16599a

// run
.{$ns}-run, .lqv-cb-explain-run > th
  background-color #18a85e
  
.${ns}-run:active
  background-color #148f50

// clear
.{$ns}-clear, .lqv-cb-explain-clear > th
  background-color $red
  
.${ns}-clear:active
  background-color #8c1c14

// explaineroo
.lv-pausescreen
  z-index 100000
  font-size 1rem
  padding 2rem 0
  text-align center
  
  transition opacity .5s ease-in
  
.lqv-pausescreen-resume
  background $teal
  border-radius .1em
  border-style none
  color #FFF
  cursor pointer
  font-family "Alegreya", serif
  font-size 2em
  margin .5em 0
  padding .5em

.lqv-cb-explain-text
  display block
  font-size 2rem

.lqv-cb-explain
  border-collapse separate
  border-spacing .5em 1em
  margin 2em auto 1em
  width 80%
  
  > tbody > tr > th
    display inline-block
    height 3rem
    width 100%
    font-weight normal
    vertical-align middle
    line-height 3rem

  > tbody > tr > td
    text-align left
    vertical-align center

