/* container */
.lqv-codebooth
  --button-height: 3rem;
  --split: 50%;

  display: grid;
  font-size: 1rem;
  grid-template: unquote('
    "files console" 4%
    "editor console" calc(96% - var(--button-height))
    "buttons console" var(--button-height) / var(--split)
  ');
  height: var(--lv-canvas-height);
  width: 100%;
  position: absolute;


/* editors */
// .cm-editor
