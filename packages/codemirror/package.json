{
  "name": "@lqv/codemirror",
  "version": "0.0.3",
  "description": "Codemirror 6 recording and replaying",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./*": {
      "import": "./dist/esm/*.mjs",
      "require": "./dist/cjs/*.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/types/*.d.ts"
      ]
    }
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liqvidjs/plugins.git"
  },
  "keywords": [
    "liqvid",
    "@liqvid/recording",
    "codemirror"
  ],
  "author": "Yuri Sulyma <yuri@liqvidjs.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liqvidjs/plugins/issues"
  },
  "homepage": "https://github.com/liqvidjs/plugins/tree/main/packages/codemirror",
  "scripts": {
    "build": "pnpm build:clean; pnpm build:js; pnpm build:postclean",
    "build:clean": "rm -rf dist",
    "build:js": "pnpm build:cjs; pnpm build:esm; node ../../build.mjs",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "build:esm": "tsc",
    "build:postclean": "rm dist/tsconfig.tsbuildinfo"
  },
  "peerDependencies": {
    "@codemirror/state": ">=0.19.9",
    "@codemirror/text": ">=0.19.6",
    "@codemirror/view": ">=0.19.47",
    "@liqvid/keymap": "^1.1.3",
    "@liqvid/recording": "^0.0.5",
    "@types/react": ">=17.0.0",
    "liqvid": "^2.1.5",
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "liqvid": {
      "optional": true
    }
  },
  "devDependencies": {
    "@codemirror/state": ">=0.19.9",
    "@codemirror/text": ">=0.19.6",
    "@codemirror/view": ">=0.19.47",
    "@liqvid/keymap": "^1.1.3",
    "@liqvid/recording": "^0.0.5",
    "liqvid": "^2.1.5",
    "strict-event-emitter-types": "^2.0.0",
    "ts-node": "^10.7.0"
  },
  "dependencies": {
    "@liqvid/utils": "^1.5.0"
  }
}
